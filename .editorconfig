# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
indent_size = 2
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.js]
indent_size = 2

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.scss]
indent_size = 2

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[Makefile]
indent_style = tab

[*.java]
indent_size = 4

[*.py]
indent_size = 4

[*.cs]
indent_size = 4

[*.sql]
indent_size = 4
